<?xml version="1.0" encoding="UTF-8"?>



<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'
	debug="false">



	<appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="ALL,debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<!-- remove L and C from pattern in prod [%c{1}] -->
			<param name="ConversionPattern" value="%d %-5p %L %C  %m %n" />
		</layout>
	</appender>

	<appender name="fileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="Threshold" value="ALL" />
		<param name="File" value="log/ddt.log" />


		<triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
			<param name="maxFileSize" value="50000000" />
		</triggeringPolicy>

		<layout class="org.apache.log4j.PatternLayout">
			<!-- remove L and C from pattern in prod [%c{1}] -->
			<param name="ConversionPattern" value="%d | %-5p | %L | %C| %m | %n" />
		</layout>

	</appender>

	<logger name="org.s2n" additivity="false">
		<level value="ALL,debug" />
		<appender-ref ref="consoleAppender" />
		<appender-ref ref="fileAppender" />
	</logger>


	<logger name="s2nl" additivity="false">
		<level value="ALL,debug" />
		<appender-ref ref="consoleAppender" />
		<appender-ref ref="fileAppender" />
	</logger>
</log4j:configuration>
