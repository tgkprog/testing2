<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!-- - Application context definition for Data module's data access layer. 
	- Accessed by business layer objects defined in "applicationContext.xml" 
	- This version of the data access layer works on a combined database, using 
	a local DataSource with DataSourceTransactionManager. It does not - need 
	any JTA support in the container: It will run as-is in plain Tomcat. -->
<beans>

	<!-- ========================= RESOURCE DEFINITIONS ========================= -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${driverClassName}" />
		<property name="url" value="${url}" />
		<property name="username" value="${username}" />
		<property name="password" value="${password}"></property>
	</bean>

	<!-- Transaction manager for a single JDBC DataSource -->
	<!-- (see dataAccessContext-jta.xml for an alternative) -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- ======== DAO DEFINITIONS: Spring Data IMPLEMENTATIONS ========= -->

	<bean id="actionsDao" class="org.s2n.ddt.dao.impl.ActionsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="functionalDao" class="org.s2n.ddt.dao.impl.FunctionalDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="featureDao" ref="featureDao" />
	</bean>

	<bean id="conditionGroupDao" class="org.s2n.ddt.dao.impl.ConditionGroupDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="conditionsDao" class="org.s2n.ddt.dao.impl.ConditionsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="featureDao" class="org.s2n.ddt.dao.impl.FeatureDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="identifierTypeDao" class="org.s2n.ddt.dao.impl.input.IdentifierTypeDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="objectsDao" class="org.s2n.ddt.dao.impl.input.ObjectsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="objectTypeDao" class="org.s2n.ddt.dao.impl.input.ObjectTypeDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="actionsDao" ref="actionsDao" />
		<property name="objDao" ref="objectsDao" />
	</bean>

	<bean id="paramDao" class="org.s2n.ddt.dao.impl.input.ParamDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="paramGroupDao" class="org.s2n.ddt.dao.impl.input.ParamGroupDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="runnerDao" class="org.s2n.ddt.dao.impl.RunnerDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="screenDao" class="org.s2n.ddt.dao.impl.ScreenDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="suiteScenarioMappingDao" class="org.s2n.ddt.dao.impl.SuiteScenarioMappingDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="agentDetailsDao" class="org.s2n.ddt.dao.impl.AgentDetailsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="applicationDao" class="org.s2n.ddt.dao.impl.ApplicationDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="funDaoImpl" ref="functionalDao" />
		<property name="identifierDaoImpl" ref="identifierTypeDao" />
	</bean>

	<bean id="objectGroupDao" class="org.s2n.ddt.dao.impl.input.ObjectGroupDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="objDao" ref="objectsDao" />
	</bean>

	<bean id="testParamDataDao" class="org.s2n.ddt.dao.impl.input.TestParamDataDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testScenarioDao" class="org.s2n.ddt.dao.impl.output.TestScenarioDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testSuiteDao" class="org.s2n.ddt.dao.impl.TestSuiteDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="testCaseDao" ref="testCaseDao" />
	</bean>

	<bean id="testCaseDao" class="org.s2n.ddt.dao.impl.input.TestCaseDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="paramDataDao" ref="testParamDataDao" />
		<property name="stepDao" ref="testStepDao" />
		<property name="testRunDataDao" ref="testRunDataDao" />
	</bean>

	<bean id="testCondDataDao" class="org.s2n.ddt.dao.impl.input.TestCondDataDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testPlanDao" class="org.s2n.ddt.dao.impl.output.TestPlanDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testPlanScenarioMapDao" class="org.s2n.ddt.dao.impl.TestPlanScenarioMapDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testReportDao" class="org.s2n.ddt.dao.impl.output.TestReportDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testRunDataDao" class="org.s2n.ddt.dao.impl.output.TestRunDataDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testRunDetailsDao" class="org.s2n.ddt.dao.impl.output.TestRunDetailsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testScenarioParamDataDao"
		class="org.s2n.ddt.dao.impl.output.TestScenarioParamDataDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testStepDao" class="org.s2n.ddt.dao.impl.input.TestStepDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="stepParamGroupMappingDao"
		class="org.s2n.ddt.dao.impl.input.TestStepParamGroupMappingDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
</beans>
